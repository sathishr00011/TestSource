<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\Microsoft\VisualStudio\TeamBuild\Microsoft.TeamFoundation.Build.targets" />

  <PropertyGroup>
   <TfCommand>"C:\Program Files (x86)\Microsoft Visual Studio 10.0\Common7\IDE\tf.exe"</TfCommand>
	<ArcotWCFWrapper_Contracts>Tesco.Org.Enterprise.Payment.ArcotWCFWrapper.Contracts.dll</ArcotWCFWrapper_Contracts>
    <ArcotWCFWrapper_Hosts>Tesco.Org.Enterprise.Payment.ArcotWCFWrapper.Hosts.dll</ArcotWCFWrapper_Hosts>
    <ArcotWCFWrapper_Library>Tesco.Org.Enterprise.Payment.ArcotWCFWrapper.Library.dll</ArcotWCFWrapper_Library>
  </PropertyGroup>
  <Target Name="MyTarget">
	
    <Exec Command="$(TfCommand) checkout /lock:none $(MSBuildProjectDirectory)\..\Lib\Tesco\$(ArcotWCFWrapper_Contracts)" ContinueOnError="true" />
    <Copy SourceFiles="$(MSBuildProjectDirectory)\..\..\..\..\..\Binaries\$(ArcotWCFWrapper_Contracts)" DestinationFiles="$(MSBuildProjectDirectory)\..\Lib\Tesco\$(ArcotWCFWrapper_Contracts)" ContinueOnError="false" />

    <Exec Command="$(TfCommand) checkout /lock:none $(MSBuildProjectDirectory)\..\Lib\Tesco\$(ArcotWCFWrapper_Hosts)" ContinueOnError="true" />
    <Copy SourceFiles="$(MSBuildProjectDirectory)\..\..\..\..\..\Binaries\$(ArcotWCFWrapper_Hosts)" DestinationFiles="$(MSBuildProjectDirectory)\..\Lib\Tesco\$(ArcotWCFWrapper_Hosts)" ContinueOnError="false" />

    <Exec Command="$(TfCommand) checkout /lock:none $(MSBuildProjectDirectory)\..\Lib\Tesco\$(ArcotWCFWrapper_Library)" ContinueOnError="true" />
    <Copy SourceFiles="$(MSBuildProjectDirectory)\..\..\..\..\..\Binaries\$(ArcotWCFWrapper_Library)" DestinationFiles="$(MSBuildProjectDirectory)\..\Lib\Tesco\$(ArcotWCFWrapper_Library)" ContinueOnError="false" />

    <Exec Command="$(TfCommand) checkin /bypass /noprompt /Comment:'***NO_CI***'" ContinueOnError="true" />
  
  </Target>
</Project>
